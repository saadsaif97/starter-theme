<header class="site-header">
  <div class="container">
    <div class="logo">
      <a href="/">
        {%- if settings.logo == blank -%}
          <h3>{{ shop.name }}</h3>
        {%- else -%}
          <img src="{{ settings.logo |  image_url: width: 120 }}" alt="{{ shop.name }}">
        {%- endif -%}
      </a>
    </div>

    <nav class="navbar">
      <ul class="nav-links">
        {%- for link in section.settings.header_nav.links -%}
          <li class="menu-item">
            <a class="{%- if link.active -%}active{%- endif -%}" href="{{ link.url }}">{{ link.title }}</a>
            {%- if link.handle == 'catalog' -%}
              {% render 'mega-menu' %}
            {%- endif -%}
          </li>
        {%- endfor -%}
      </ul>
    </nav>

    <div class="cart-icon">
      <a id="open-cart" href="/cart">
        ðŸ›’
        <span class="cart-count">2</span>
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Navbar",
  "settings": [
    {
      "type": "link_list",
      "id": "header_nav",
      "label": "Header navigation"
    }
  ],
  "blocks": [
    {
      "type": "mega_menu",
      "name": "Mega menu",
      "settings": [
        {
          "type": "link_list",
          "id": "menu_1",
          "label": "Menu 1"
        },
        {
          "type": "link_list",
          "id": "menu_2",
          "label": "Menu 2"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "image_url",
          "label": "Image url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Navbar"
    }
  ]
}
{% endschema %}

<style>
  /* Basic Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .site-header {
    background: #fff;
    border-bottom: 1px solid #eee;
    padding: 15px 20px;
    position: sticky;
    top: 0;
    z-index: 999;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
  }

  .logo img {
    height: 40px;
    width: auto;
  }

  .navbar .nav-links {
    list-style: none;
    display: flex;
    gap: 25px;
  }

  .navbar .nav-links a {
    text-decoration: none;
    color: #333;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .navbar .nav-links a.active {
    font-weight: bold;
  }

  .navbar .nav-links a:hover {
    color: #0077cc;
  }

  .cart-icon {
    position: relative;
    font-size: 24px;
  }

  .cart-icon a {
    text-decoration: none;
    color: #333;
    position: relative;
  }

  .cart-count {
    position: absolute;
    top: -8px;
    right: -10px;
    background: #ff4d4f;
    color: white;
    font-size: 12px;
    padding: 2px 6px;
    border-radius: 50%;
  }
</style>
