<div class="product-grid">

  {%- for list_product in section.settings.products -%}
    <div class="product-card">
      <a href="/products/{{ list_product.handle }}">
        <img src="{{ list_product.featured_image | image_url: width: 400 }}" alt="{{ list_product.title }}" class="product-image">
        <h2 class="product-title">{{ list_product.title }}</h2>
        <p class="product-price">{{ list_product.price | money_with_currency }}</p>
      </a>
    </div>
  {%- endfor -%}
</div>

{% schema %}
  {
    "name": "Feature Products",
    "settings": [
      {
        "type": "product_list",
        "id": "products",
        "label": "Products",
        "limit": 5
      }
    ],
    "presets": [
      {
        "name": "Feature Products"
      }
    ]
  }
{% endschema %}


<style>
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 20px;
    padding: 20px;
  }

  .product-card {
    border: 1px solid #eee;
    border-radius: 12px;
    overflow: hidden;
    background-color: #fff;
    transition: box-shadow 0.3s ease;
  }

  .product-card:hover {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .product-card a {
    color: inherit;
    text-decoration: none;
    display: block;
    padding: 0 0 16px;
  }

  .product-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .product-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 12px 16px 6px;
  }

  .product-price {
    font-size: 0.95rem;
    color: #333;
    margin: 0 16px;
  }
</style>
