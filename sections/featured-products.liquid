<style>
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 20px;
    padding: 20px;
  }

  .product-card {
    border: 1px solid #eee;
    border-radius: 12px;
    overflow: hidden;
    background-color: #fff;
    transition: box-shadow 0.3s ease;
  }

  .product-card:hover {
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .product-card a {
    color: inherit;
    text-decoration: none;
    display: block;
    padding: 0 0 16px;
  }

  .product-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .product-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 12px 16px 6px;
  }

  .product-price {
    font-size: 0.95rem;
    color: #333;
    margin: 0 16px;
  }
</style>
